<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="kiwi.jordancrawford.whattomake.MyIngredientsFragment"
    android:elevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/ingredient_drawer_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:padding="10dp"
            android:text="My Ingredients"/>
        <ListView android:id="@+id/ingredient_drawer_list"
            android:layout_width="match_parent"
            android:layout_below="@id/ingredient_drawer_heading"
            android:layout_height="wrap_content"
            android:choiceMode="multipleChoice"/>

    </RelativeLayout>

</FrameLayout>
