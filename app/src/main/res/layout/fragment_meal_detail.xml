<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="kiwi.jordancrawford.whattomake.MealDetailFragment">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/meal_detail_text_padding">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/meal_detail_picture_height"
                android:id="@+id/meal_detail_picture"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/meal_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/meal_detail_ingredient_header_vert_padding"
                android:paddingBottom="@dimen/meal_detail_ingredient_header_vert_padding"
                android:textStyle="bold"
                android:text="@string/meal_detail_ingredient_header"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ingredient_list_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/meal_detail_steps_header_vert_padding"
                android:paddingBottom="@dimen/meal_detail_steps_header_vert_padding"
                android:textStyle="bold"
                android:text="@string/meal_detail_steps_header"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/step_list_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>

</FrameLayout>
