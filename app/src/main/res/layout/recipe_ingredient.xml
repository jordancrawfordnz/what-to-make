<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/recipe_ingredient_padding">
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/recipe_ingredient_avaliable"
        android:layout_width="@dimen/recipe_ingredient_avaliable_width"
        android:layout_marginRight="@dimen/recipe_ingredient_avaliable_margin_right"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/recipe_ingredient_name"
        android:layout_toRightOf="@id/recipe_ingredient_avaliable"
        android:layout_width="wrap_content"
        android:textSize="@dimen/recipe_ingredient_name_text_size"
        android:layout_height="wrap_content" />
</RelativeLayout>